<!DOCTYPE html>
<html
    layout:decorate="~{layouts/layout}"
>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title th:text="${title}"></title>
</head>
<body>
    <main id="main" class="main" layout:fragment="main">
        <section class="section">
            <div class="row">
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Insertion</h5>
                    <form action="/[NomModeleLowerPluriel]" method="post" class="row g-3">
                      [InputsAjouter]
                      <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary">Insérer</button>
                        <button type="reset" class="btn btn-outline-secondary">Reset</button>
                      </div>
                    </form>
      
                  </div>
                </div>
      
              </div>
            </div>

            <div class="d-flex my-3" style="gap: 21px;">
              <a href="/[NomModeleLowerPluriel]/export-pdf" type="button" class="btn btn-outline-primary" >Export PDF</a>
              <a href="/[NomModeleLowerPluriel]/export-csv" type="button" class="btn btn-outline-info" >Export CSV</a>
              <a href="/[NomModeleLowerPluriel]/export-excel" type="button" class="btn btn-outline-success" >Export Excel</a>
            </div>
            <div class="row">
              <div class="col-lg-12">
      
                <div id="elementPDF" class="card">
                  <div class="card-body">
                    <h5 class="card-title">Liste [NomModeleUpperPluriel]</h5>
                        <form action="/[NomModeleLowerPluriel]" method="get" class="mb-3">
                            <div class="row align-items-center">
                              <div class="col-2">
                                <select class="form-select" name="sortBy">
                                    [optionsTrier]
                                </select>
                              </div>
                              <div class="form-check col-2" style="width: 6%;">
                                <input class="form-check-input" type="radio" name="direction" value="asc" id="flexRadioDefault1" th:checked="${ direction == 'asc'}">
                                <label class="form-check-label" for="flexRadioDefault1">
                                  ASC
                                </label>
                              </div>
                                <div class="form-check col-2" style="width: 6%;">
                                  <input class="form-check-input" type="radio" name="direction" value="desc" id="flexRadioDefault2" th:checked="${ direction == 'desc'}">
                                  <label class="form-check-label" for="flexRadioDefault2">
                                    DESC
                                  </label>
                                </div>
                              <div class="col">
                                <button type="submit" class="btn btn-outline-primary">Trier</button>
                              </div>
                            </div>
                        </form>
                        <form action="/[NomModeleLowerPluriel]" method="get" class="mb-3">
                          <div class="row align-items-center">
                            <div class="col-4">
                              <input type="text" class="form-control" th:if="${search != null}" th:value="${search}" name="search" placeholder="rechercher">
                              <input type="text" class="form-control" th:unless="${search != null}" name="search" placeholder="rechercher">
                            </div>
                            <div class="col">
                              <button type="submit" class="btn btn-outline-primary">Search</button>
                            </div>
                          </div>
                        </form>
                        <form action="/[NomModeleLowerPluriel]" method="get" class="mb-3">
                          <div class="row">
                              <div class="col">
                                <div class="accordion col" id="accordionFlushExample">
                                  <div class="accordion-item">
                                    <h2 class="accordion-header" id="flush-headingOne">
                                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                        Recherche Muticritère
                                      </button>
                                    </h2>
                                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                      <div class="accordion-body">Placeholder content for this accordion, which is intended to demonstrate the <code>.accordion-flush</code> class. This is the first item's accordion body.</div>
                                    </div>
                                  </div>
                                </div><!-- End Accordion without outline borders -->
                              </div>
                              <div class="col"></div> 
                          </div>
                        </form>
                    <div style="overflow-x:auto;">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          [EnteteTable]
                        </tr>
                      </thead>
                      <tbody>
                        <tr th:each=" element : ${[NomModeleLowerPluriel]}">
                          [LigneTables]
                          <td>
                            <a data-bs-toggle="modal" th:data-bs-target= "'#modifier-' + ${element.id}" type="button" class="btn btn-outline-primary btn-sm">Modifier</a>
                            <a data-bs-toggle="modal" th:data-bs-target= "'#supprimer-' + ${element.id}" type="button" class="btn btn btn-outline-danger btn-sm">Supprimer</a>                            
                          </td>
                        <div class="modal fade" th:id = "'modifier-' + ${element.id}" tabindex="-1">
                          <form action="/[NomModeleLowerPluriel]/update" method="post" class="row g-3">
                            <input type="hidden" th:value = "${element.id}" name="id">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" th:text="'Modification du [NomModeleLower] N° ' + ${element.id}"></h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  [InputsModifier]
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-outline-warning">Modifier</button>
                                </div>
                              </div>
                            </div>
                        </form>
                        </div>

                        <div class="modal fade" th:id = "'supprimer-'+ ${element.id}" tabindex="-1">
                          <form action="/[NomModeleLowerPluriel]/delete" method="post" class="row g-3">
                            <input type="hidden" th:value ="${element.id}" name="id">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" th:text="'Suppression du [NomModeleLower] N° ' + ${element.id}"></h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  Voulez vous vraiment Supprimer ?
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                                </div>
                              </div>
                            </div>
                          </form>
                        </div>
                      </tr>

                      </tbody>
                    </table>
                    </div>

                    <nav aria-label="Page navigation"  th:if="${#lists.size([NomModeleLowerPluriel]) > 0}">
                      <ul class="pagination">
                          <li class="page-item" th:if="${currentPage > 0}">
                              <a class="page-link" th:href="@{[NomModeleLowerPluriel](page=0, sortBy=${sortBy}, direction=${direction})}">First</a>
                          </li>
                          <li class="page-item" th:if="${currentPage > 0}">
                              <a class="page-link" th:href="@{[NomModeleLowerPluriel](page=${currentPage - 1}, sortBy=${sortBy}, direction=${direction})}">Previous</a>
                          </li>
                          <th:block th:with="maxPageLinks=2">
                            <th:block th:with="startPage=${(currentPage - maxPageLinks < 0) ? 0 : (currentPage - maxPageLinks)}">
                              <th:block th:with="endPage=${(currentPage + maxPageLinks > totalPages - 1) ? totalPages - 1 : (currentPage + maxPageLinks)}">
                                <li class="page-item" th:each="i : ${#numbers.sequence(startPage, endPage)}" th:class="${currentPage == i} ? 'active'">
                                  <a class="page-link" th:href="@{[NomModeleLowerPluriel](page=${i}, sortBy=${sortBy}, direction=${direction})}" th:text="${i} + 1"></a>
                                </li>
                              </th:block>
                            </th:block>
                          </th:block>
                          <li class="page-item" th:if="${currentPage < totalPages - 1}">
                              <a class="page-link" th:href="@{[NomModeleLowerPluriel](page=${currentPage + 1}, sortBy=${sortBy}, direction=${direction})}">Next</a>
                          </li>
                          <li class="page-item" th:if="${currentPage < totalPages - 1}">
                              <a class="page-link" th:href="@{[NomModeleLowerPluriel](page=${totalPages - 1}, sortBy=${sortBy}, direction=${direction})}">Last</a>
                          </li>
                      </ul>
                    </nav>
      
                  </div>
                </div>
      
              </div>
            </div>
          </section>
    </main>
    
    
</body>
</html>